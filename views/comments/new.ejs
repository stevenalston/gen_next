<% include ../partials/header %>
<div class="container pt-5 mt-4">
    <h1 class="display-4 text-center">Leave a New Comment for <%= course.name %></h1>
    <div class="row pt-5">
        <div class="col-md-4 mx-auto">
            <form action="/courses/<%= course._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control mb-3" type="text" name="comment[text]" placeholder="comment text">
                </div>
                    <button class="btn btn-primary btn-block btn-lg" type="submit">Submit</button>
                </div>
        </form>
            
        </div>
        <a class="mt-5" href="/courses"><i class="fa fa-chevron-left"></i> Go Back</a>
    </div>
</div>




<% include ../partials/footer %>