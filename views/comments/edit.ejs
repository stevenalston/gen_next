<% include ../partials/header %>
<div class="container pt-5 mt-4">
    <h1 class="display-4 text-center">Edit Comment</h1>
    <div class="row pt-5">
        <div class="col-md-4 mx-auto">
            <form action="/courses/<%= course_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control mb-3" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block btn-lg" type="submit">Submit</button>
                </div>
        </form>
            
        </div>
        <a class="mt-5" href="/courses/<%= course_id %>"><i class="fa fa-chevron-left"></i> Go Back</a>
    </div>
</div>




<% include ../partials/footer %>