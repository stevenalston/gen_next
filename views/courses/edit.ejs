<% include ../partials/header %>
<div class="container pt-5 mt-4">
    <h1 class="display-4 text-center">Edit <%= course.name %></h1>
    <div class="row pt-5">
        <div class="col-md-4 mx-auto">
            <form action="/courses/<%= course._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control mb-3" type="text" name="course[name]" value="<%= course.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control mb-3" type="text" name="course[image]" value="<%= course.image %>">
                </div>
                 <div class="form-group">
                    <input class="form-control mb-3" type="number" name="course[price]" min="0.01" step="0.01" value="<%= course.price%>">
                </div>
                <div class="form-group">
                    <input class="form-control mb-3" type="text" name="course[description]" value="<%= course.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block btn-lg" type="submit">Submit</button>
                </div>
        </form>
            
        </div>
        <a class="mt-5" href="/courses"><i class="fa fa-chevron-left"></i> Go Back</a>
    </div>
</div>




<% include ../partials/footer %>