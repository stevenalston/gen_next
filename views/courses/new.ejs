<% include ../partials/header %>
<div class="container pt-5 mt-4">
    <h1 class="display-4 text-center">Create a New Course</h1>
    <div class="row pt-5">
        <div class="col-md-4 mx-auto">
            <form action="/courses" method="POST">
                <div class="form-group">
                    <input class="form-control mb-3" type="text" name="name" placeholder="course name">
                </div>
                <div class="form-group">
                    <input class="form-control mb-3" type="text" name="image" placeholder="enter image link">
                </div>
                <div class="form-group">
                    <input class="form-control mb-3" type="number" name="price" min="0.01" step="0.01" placeholder=price>
                </div>
                <div class="form-group">
                    <input class="form-control mb-3" type="text" name="description" placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block btn-lg" type="submit">Submit</button>
                </div>
        </form>
            <a class="mt-5" href="/courses"><i class="fa fa-chevron-left"></i> Go Back</a>
        </div>
    </div>
</div>




<% include ../partials/footer %>