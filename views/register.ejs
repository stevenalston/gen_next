<% include partials/header %>
<div class="container">
  <h1 class="pt-5 mt-3 display-4 text-center">Sign Up</h1>
  <div class="row">
    <div class="col-md-4 mx-auto">
      <form action="/register" method="post">
        <div class="form-group mb-2">
          <label class="mr-2" for="username">Username </label>
          <input type="text" name="username" class="form-control" id="username-form" aria-describedby="emailHelp" placeholder="Choose a username">
          <small id="usernameHelp" class="form-text text-muted">Choose a unique username</small>
        </div>
        <div class="form-group">
          <label class="mr-2" for="password">Password </label>
          <input type="password" class="form-control" id="passwordForm" name="password" placeholder="Choose a Password">
        </div>
        <button type="submit" class="btn btn-block btn-primary">Sign Up</button>
      </form>
      
    </div>
  </div>
  
</div>

<% include partials/footer %>